<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/destination_authentication">


    <fragment
        android:id="@+id/destination_authentication"
        android:name="com.example.myanimal.AuthenticationInterface"
        android:label="Authentication">
    </fragment>

    <activity
        android:id="@+id/destination_navbar"
        android:name="com.example.myanimal.NavBar"
        android:label="NavBar"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>

    <activity
        android:id="@+id/destination_splashActivity"
        android:name="com.example.myanimal.AuthenticationActivity"
        android:label="NavBar"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>


    <fragment
        android:id="@+id/destination_profile"
        android:name="com.example.myanimal.ProfileFragment"
        android:label="Profile">
    </fragment>

    <fragment
        android:id="@+id/destination_pets"
        android:name="com.example.myanimal.PetsFragment"
        android:label="Pets">

    </fragment>

    <fragment
        android:id="@+id/destination_home"
        android:name="com.example.myanimal.HomeFragment"
        android:label="Home">

    </fragment>

    <fragment
        android:id="@+id/destination_earn"
        android:name="com.example.myanimal.EarnFragment"
        android:label="Earn">
    </fragment>

    <fragment
        android:id="@+id/destination_setting"
        android:name="com.example.myanimal.SettingFragment"
        android:label="Setting">
    </fragment>


    <action
        android:id="@+id/to_SplashActivity"
        app:destination="@id/destination_splashActivity"/>



</navigation>
